<div class="slide-container">
    <div class="slide" id="slide-{{ slide.id }}">
        {{ slide.content|raw }}
    </div>

    <div class="actions">
        {{ slide.id }}:

        <button data-selector="#slide-{{ slide.id }}" data-filename="slide-{{ slide.id }}">
            Slide
        </button>

        <button data-selector="#slide-{{ slide.id }}" data-filename="slide-{{ slide.id }}" data-class="mini">
            Mini
        </button>

        <button data-selector="#slide-{{ slide.id }}" data-filename="slide-{{ slide.id }}" data-class="twitter">
            Twitter
        </button>

        <button data-selector="#slide-{{ slide.id }}" data-filename="slide-{{ slide.id }}" data-class="wide">
            Wide
        </button>
    </div>
</div>
